{
	"name": "@chitragupta/anina",
	"version": "0.1.0",
	"description": "Autonomous agent framework with self-healing, learning loops, and agent tree lifecycle",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/srinivaspendela/chitragupta.git",
		"directory": "packages/anina"
	},
	"keywords": [
		"chitragupta",
		"anina",
		"agent",
		"autonomous",
		"ai",
		"self-healing",
		"learning-loop",
		"typescript"
	],
	"engines": {
		"node": ">=20.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": { "types": "./dist/index.d.ts", "import": "./dist/index.js" },
		"./*": { "types": "./dist/*.d.ts", "import": "./dist/*.js" }
	},
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"dev": "tsc -p tsconfig.json --watch",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@chitragupta/core": "workspace:*",
		"@chitragupta/smriti": "workspace:*",
		"@chitragupta/swara": "workspace:*"
	},
	"files": [
		"dist",
		"README.md"
	]
}
