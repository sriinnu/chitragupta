{
	"name": "@chitragupta/swara",
	"version": "0.1.0",
	"description": "AI provider abstraction layer with pluggable LLM backends for the Chitragupta platform",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/sriinnu/chitragupta.git",
		"directory": "packages/swara"
	},
	"keywords": [
		"chitragupta",
		"swara",
		"ai",
		"llm",
		"provider",
		"anthropic",
		"openai",
		"ollama",
		"typescript"
	],
	"engines": {
		"node": ">=22"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./providers": {
			"types": "./dist/providers/index.d.ts",
			"import": "./dist/providers/index.js"
		},
		"./provider-registry": {
			"types": "./dist/provider-registry.d.ts",
			"import": "./dist/provider-registry.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"import": "./dist/types.js"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"import": "./dist/*.js"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"dev": "tsc -p tsconfig.json --watch",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@chitragupta/core": "workspace:*"
	},
	"files": [
		"dist",
		"README.md"
	],
	"homepage": "https://github.com/sriinnu/chitragupta/tree/main/packages/swara#readme",
	"bugs": {
		"url": "https://github.com/sriinnu/chitragupta/issues"
	}
}
